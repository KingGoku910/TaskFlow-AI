# Environment variables for Effecto TaskFlow
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-from-supabase

# Google AI Configuration (Required for AI features)
GOOGLE_GENAI_API_KEY=your-google-ai-api-key

# Optional: Service Role Key (for admin operations)
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# PayFast Configuration (South African Payment Gateway)
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_PASSPHRASE=your_payfast_passphrase
PAYFAST_SANDBOX=true

# Google Pay Configuration
GOOGLE_PAY_MERCHANT_ID=your_google_pay_merchant_id
GOOGLE_PAY_ENVIRONMENT=TEST

# Direct EFT Configuration (Custom Implementation)
DIRECT_EFT_BANK_CODE=your_bank_code
DIRECT_EFT_ACCOUNT_NUMBER=your_account_number
DIRECT_EFT_BRANCH_CODE=your_branch_code

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Email Configuration for Billing
BILLING_EMAIL_FROM=ryno@innovatex-ai.net
BILLING_EMAIL_SUPPORT=ryno@innovatex-ai.net

# Subscription Configuration
DEFAULT_CURRENCY=USD
DEFAULT_BILLING_CYCLE=monthly
TRIAL_PERIOD_DAYS=7

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_MEETING_SUMMARIES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_TEAM_COLLABORATION=false

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_PAYMENT_LOGGING=true
ENABLE_USAGE_TRACKING=true
